<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>kson</id>
    <name>Kson</name>
    <vendor>Kson.org</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.intellij.intelliLang</depends>

    <description><![CDATA[
        <p>
            <a href="https://kson.org">Kson</a> language support
        </p>
        <p>
            For issues, feature requests, and source code, please visit the <a href="https://github.com/kson-org/kson/tree/main/jetbrains">plugin project home</a>
        </p>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Kson"
                  implementationClass="org.kson.jetbrains.file.KsonFileType"
                  fieldName="INSTANCE"
                  language="kson"
                  extensions="kson"/>

        <lang.parserDefinition language="kson"
                               implementationClass="org.kson.jetbrains.parser.KsonParserDefinition"/>
        <lang.syntaxHighlighterFactory language="kson"
                                       implementationClass="org.kson.jetbrains.highlighter.KsonSyntaxHighlighterFactory"/>
        <typedHandler implementation="org.kson.jetbrains.editor.KsonTypedHandlerDelegate"/>
        <backspaceHandlerDelegate implementation="org.kson.jetbrains.editor.KsonBackspaceHandlerDelegate"/>
        <lang.commenter language="kson" implementationClass="org.kson.jetbrains.editor.KsonCommenter"/>
        <lang.braceMatcher language="kson" implementationClass="org.kson.jetbrains.editor.KsonPairedBraceMatcher"/>
        <lang.quoteHandler language="kson" implementationClass="org.kson.jetbrains.editor.KsonQuoteHandler"/>
        <completion.contributor language="kson"
                                implementationClass="org.kson.jetbrains.editor.KsonCompletionContributor"/>
        <languageInjectionContributor language="kson" 
                                      implementationClass="org.kson.jetbrains.inject.KsonLanguageInjectionContributor"/>
        <languageInjectionPerformer language="kson"
                                    implementationClass="org.kson.jetbrains.inject.KsonLanguageInjectionPerformer"/>
        <langCodeStyleSettingsProvider
                implementation="org.kson.jetbrains.config.KsonLanguageCodeStyleSettingsProvider"/>
        <colorSettingsPage implementation="org.kson.jetbrains.pages.KsonColorSettingsPage"/>
        <formattingService implementation="org.kson.jetbrains.formatter.KsonExternalFormatter"/>
        <enterHandlerDelegate implementation="org.kson.jetbrains.editor.KsonEnterHandlerDelegate"/>
        <lang.foldingBuilder language="kson"
                             implementationClass="org.kson.jetbrains.folding.KsonFoldingBuilder"/>
    </extensions>
</idea-plugin>
