{
  "scopeName": "source.kson",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.kson",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kson",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kson",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.kson",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.kson",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
} 