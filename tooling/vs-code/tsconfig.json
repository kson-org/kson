{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    // Custom types
    "typeRoots": [
      "./node_modules/@types"
    ],
    // Useful settings for debugging
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    // CommonJS interop
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Prevents cross-platform issues
    "forceConsistentCasingInFileNames": true,
    // Performance improvement
    "skipLibCheck": true
  },
  "include": [
    "src", "test"
  ]
}