{
  "comments": {
    "lineComment": "#"
  },
  "onEnterRules": [
    {
      "description": "Indent on a key without value",
      "beforeText": "^\\s*[^:]+:\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "description": "Indent embed blocks with % or $ characters and an optional tag",
      "beforeText": "^\\s*[^:]+:\\s*[%|$][a-zA-Z]*$",
      "afterText": "^[%|$]{2}$",
      "action": {
        "indent": "indent"
      }
    }
  ],
  "brackets": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "<",
      ">"
    ]
  ],
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "[",
      "close": "]",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "(",
      "close": ")",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "<",
      "close": ">",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "$",
      "close": "$$",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "%",
      "close": "%%",
      "notIn": [
        "string",
        "comment"
      ]
    }
  ],
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "<",
      ">"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ]
  ]
}